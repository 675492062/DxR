{
  "title": "Field Data",
  "description": "This displays a 3D glyph plot.",
  "width": 500,
  "height": 500,
  "depth":  500,
  "data": { "url": "DxRData/cfd.json" },
  "mark": "paperplane",
  "encoding": {
    "x": {
      "field": "x",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain":  ["20", "25"]
      },
      "axis": {
        "face": "front",
        "orient": "bottom",
        "title": "x position",
        "grid": false,
        "ticks": true,
        "tickCount": 6,
        "values": [20, 21, 22, 23, 24, 25],
        "labels":  true
      }
    },
    "y": {
      "field": "y",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ "20", "25" ]
      },
      "axis": {
        "face": "front",
        "orient": "left",
        "title": "y position",
        "grid": false,
        "ticks": true,
        "tickCount": 6,
        "values": [ 20, 21, 22, 23, 24, 25 ],
        "labels": true
      }
    },
    "z": {
      "field": "z",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ "0", "5" ]
      },
      "axis": {
        "face": "left",
        "orient": "bottom",
        "title": "z position",
        "grid": false,
        "ticks": true,
        "tickCount": 6,
        "values": [ 0, 1, 2, 3, 4, 5 ],
        "labels": true
      }
    },
    "xorient": {
      "field": "vx",
      "type": "quantitative",
      "scale": {
        "type": "custom"
      }
    },
    "yorient": {
      "field": "vy",
      "type": "quantitative",
      "scale": {
        "type": "custom"
      }
    },
    "zorient": {
      "field": "vz",
      "type": "quantitative",
      "scale": {
        "type": "custom"
      }
    },
    "size": {
      "value":  10
    }
  }
}