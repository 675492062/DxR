{
  "title": "Cars Data",
  "description":  "This displays a scatterplot with the color channel mapped to Origin - a nominal data type.",
  "width": 500,
  "height": 500,
  "depth": 500,
  "data": { "url": "DxRData/cars.json" },
  "mark": "point",
  "encoding": {
    "x": {
      "field": "Horsepower",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ 0, 250 ],
        "range": [ 0, 500 ]
      },
      "axis": {
        "face": "front",
        "orient": "bottom",
        "title": "HP",
        "grid": false,
        "ticks": true,
        "tickCount": 6,
        "values": [ 0, 50, 100, 150, 200, 250 ],
        "labels": true
      }
    },
    "y": {
      "field": "Miles_per_Gallon",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ 0, 50 ],
        "range": [ 0, 500 ]
      },
      "axis": {
        "face": "front",
        "orient": "left",
        "title": "MPG",
        "grid": false,
        "ticks": true,
        "tickCount": 5,
        "values": [ 0, 10, 20, 30, 40, 50 ],
        "labels": true
      }
    },
    "color": {
      "field": "Origin",
      "type": "nominal",
      "scale": {
        "type": "ordinal",
        "domain": [ "USA", "Japan", "Europe" ],
        "range": "category",
        "scheme": "tableau10"
      },
      "legend": {
        "type": "symbol",
        "face": "front",
        "orient": "right",
        "x": 500,
        "y": 500,
        "z": 0,
        "title": "Origin Legend"
      }
    },
    "tooltip": {
      "field": "Name",
      "type": "nominal",
      "scale": {
        "type": "custom"
      }
    },
    "size": {
      "value": 10
    }
  }
}