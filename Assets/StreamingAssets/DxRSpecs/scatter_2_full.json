{
  "title": "Cars Data",
  "description":  "This displays a scatterplot with the color channel mapped to Origin - a nominal data type.",
  "width": 500,
  "height": 500,
  "depth": 500,
  "data": { "url": "DxRData/cars.json" },
  "mark": "point",
  "encoding": {
    "x": {
      "field": "Horsepower",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ 0, 250 ],
        "range": [ 0, 500 ]
      },
      "axis": {
        "face": "front",
        "orient": "bottom",
        "title": "HP",
        "grid": true,
        "ticks": true,
        "tickCount": 5
      }
    },
    "y": {
      "field": "Miles_per_Gallon",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ 0, 50 ],
        "range": [ 0, 500 ]
      },
      "axis": {
        "face": "front",
        "orient": "left",
        "title": "MPG",
        "grid": true,
        "ticks": true,
        "tickCount": 6
      }
    },
    "color": {
      "field": "Origin",
      "type": "nominal",
      "scale": {
        "type": "ordinal",
        "range": "category",
        "scheme": "tableau10"
      },
      "legend": {
        "type": "symbol",
        "face": "front",
        "orient": "right",
        "title": "Origin Legend"
      }
    }
  }
}