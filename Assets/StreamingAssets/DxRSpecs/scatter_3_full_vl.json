{
  "title": "Cars Data",
  "description": "This displays a scatterplot with the color channel mapped to Weight_in_lbs - a quantitative data type.",
  "width": 500,
  "height": 500,
  "data": { "url": "data/cars.json" },
  "mark": "point",
  "encoding": {
    "x": {
      "field": "Horsepower",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ 0, 250 ],
        "range": [ 0, 500 ]
      },
      "axis": {
        "orient": "bottom",
        "title": "HP",
        "grid": true,
        "ticks": true,
        "tickCount": 5
      }
    },
    "y": {
      "field": "Miles_per_Gallon",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ 0, 50 ],
        "range": [ 500, 0 ]
      },
      "axis": {
        "orient": "left",
        "title": "MPG",
        "grid": true,
        "ticks": true,
        "tickCount": 6
      }
    },
    "color": {
      "field": "Weight_in_lbs",
      "type": "quantitative",
      "scale": {
        "type": "sequential",
        "domain": [ 1000, 2750, 4500 ],
        "range": [ "#ff7f0e", "#e7ba52", "#17becf" ]
      },
      "legend": {
        "type": "gradient",
        "orient": "right",
        "title": "Weight in lbs"
      }
    }
  }
}