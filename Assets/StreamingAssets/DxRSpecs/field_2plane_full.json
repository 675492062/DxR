{
  "title": "Field Data",
  "description": "This displays a 3D glyph plot.",
  "width": 2000,
  "height": 2000,
  "depth":  2000,
  "data": { "url": "DxRData/streamline.json" },
  "mark": "paperplane",
  "encoding": {
    "x": {
      "field": "x",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ 0, 5 ],
        "range": [ 0, 2000 ]
      },
      "axis": {
        "face": "front",
        "orient": "bottom",
        "title": "x",
        "grid": true,
        "ticks": true,
        "tickCount": 5
      }
    },
    "y": {
      "field": "y",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ 0, 5 ],
        "range": [ 0, 2000 ]
      },
      "axis": {
        "face": "front",
        "orient": "left",
        "title": "y",
        "grid": true,
        "ticks": true,
        "tickCount": 5
      }
    },
    "z": {
      "field": "z",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ 0, 5 ],
        "range": [ 0, 2000 ]
      },
      "axis": {
        "face": "left",
        "orient": "bottom",
        "title": "z",
        "grid": true,
        "ticks": true,
        "tickCount": 5
      }
    },
    "height": {
      "field": "time",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ 0, 4 ],
        "range": [ 0, 100 ]
      }
    },
    "xorient": {
      "field": "vx",
      "type": "quantitative",
      "scale": {
        "type": "custom"
      }
    },
    "yorient": {
      "field": "vy",
      "type": "quantitative",
      "scale": {
        "type": "custom"
      }
    },
    "zorient": {
      "field": "vz",
      "type": "quantitative",
      "scale": {
        "type": "custom"
      }
    },
    "color": {
      "value": "#ffffbf"
    }
  }
}