{
  "title": "Field Data",
  "description": "This displays a 3D glyph plot.",
  "width": 500,
  "height": 500,
  "depth":  500,
  "data": { "url": "DxRData/streamline.json" },
  "mark": "paperplane",
  "encoding": {
    "x": {
      "field": "x",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ 0, 5 ],
        "range": [ 0, 500 ]
      },
      "axis": {
        "face": "front",
        "orient": "bottom",
        "title": "x",
        "grid": true,
        "ticks": true,
        "tickCount": 5
      }
    },
    "y": {
      "field": "y",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ 0, 5 ],
        "range": [ 0, 500 ]
      },
      "axis": {
        "face": "front",
        "orient": "left",
        "title": "y",
        "grid": true,
        "ticks": true,
        "tickCount": 5
      }
    },
    "z": {
      "field": "z",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ 0, 5 ],
        "range": [ 0, 500 ]
      },
      "axis": {
        "face": "left",
        "orient": "bottom",
        "title": "z",
        "grid": true,
        "ticks": true,
        "tickCount": 5
      }
    },
    "height": {
      "field": "time",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ 0, 4 ],
        "range": [ 0, 100 ]
      }
    },
    "xorient": {
      "field": "vx",
      "type": "quantitative",
      "scale": {
        "type": "custom"
      }
    },
    "yorient": {
      "field": "vy",
      "type": "quantitative",
      "scale": {
        "type": "custom"
      }
    },
    "zorient": {
      "field": "vz",
      "type": "quantitative",
      "scale": {
        "type": "custom"
      }
    },
    "color": {
      "field": "time",
      "type": "quantitative",
      "scale": {
        "type": "sequential",
        "domain": [ 0, 4 ],
        "range": [ "#fef0d9", "#b30000" ]
      },
      "legend": {
        "type": "gradient",
        "face": "front",
        "orient": "right",
        "x": 500,
        "y": 500,
        "z": 0,
        "gradientWidth": 200,
        "gradientHeight": 50,
        "title": "Time"
      }
    },
    "size": {
      "value":  50
    }
  }
}