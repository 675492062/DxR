{
  "title": "Cars Data",
  "description": "This displays a scatterplot with the color channel mapped to Weight_in_lbs - a quantitative data type.",
  "width": 500,
  "height": 500,
  "depth": 500,
  "data": { "url": "DxRData/cars.json" },
  "mark": "text",
  "encoding": {
    "x": {
      "field": "Horsepower",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ 0, 250 ],
        "range": [ 0, 900 ]
      },
      "axis": {
        "face": "front",
        "orient": "bottom",
        "title": "HP",
        "grid": true,
        "ticks": true,
        "tickCount": 5
      }
    },
    "y": {
      "field": "Miles_per_Gallon",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ 0, 50 ],
        "range": [ 0, 900 ]
      },
      "axis": {
        "face": "front",
        "orient": "left",
        "title": "MPG",
        "grid": true,
        "ticks": true,
        "tickCount": 6
      }
    },
    "z": {
      "field": "Acceleration",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ 0, 30 ],
        "range": [ 0, 500 ]
      },
      "axis": {
        "face": "left",
        "orient": "bottom",
        "title": "Acceleration",
        "grid": true,
        "ticks": true,
        "tickCount": 6
      }
    },
    "color": {
      "field": "Weight_in_lbs",
      "type": "quantitative",
      "scale": {
        "type": "sequential",
        "domain": [ 1000, 2750, 4500 ],
        "range": [ "#ff7f0e", "#e7ba52", "#17becf" ]
      },
      "legend": {
        "type": "gradient",
        "face": "front",
        "orient": "right",
        "x": 500,
        "y": 500,
        "z": 0,
        "gradientWidth": 200,
        "gradientHeight": 50,
        "title": "Weight in lbs"
      }
    },
    "size": {
      "value": 20
    },
    "text": {
      "field": "Name",
      "type": "nominal",
      "scale": {
        "type": "custom"
      }
    }
  }
}