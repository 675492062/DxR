{
  "title": "Cars Data",
  "description": "This displays a scatterplot with the color channel mapped to Weight_in_lbs - a quantitative data type.",
  "width": 500,
  "height": 500,
  "depth": 500,
  "data": { "url": "cars.json" },
  "mark": "point",
  "encoding": {
    "x": {
      "field": "Horsepower",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ 0, 250 ],
        "range": [ 0, 500 ]
      },
      "axis": {
        "face": "front",
        "orient": "bottom",
        "title": "HP",
        "grid": false,
        "ticks": true,
        "tickCount": 6,
        "values": [ 0, 50, 100, 150, 200, 250 ],
        "labels": true
      }
    },
    "y": {
      "field": "Miles_per_Gallon",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ 0, 50 ],
        "range": [ 0, 500 ]
      },
      "axis": {
        "face": "front",
        "orient": "left",
        "title": "MPG",
        "grid": false,
        "ticks": true,
        "tickCount": 5,
        "values": [ 0, 10, 20, 30, 40, 50 ],
        "labels": true
      }
    },
    "color": {
      "field": "Displacement",
      "type": "quantitative",
      "scale": {
        "type": "sequential",
        "domain": [ 68,455 ],
        "range": "ramp",
        "scheme": "blues"
      },
      "legend": {
        "type": "gradient",
        "face": "front",
        "orient": "right",
        "x": 500,
        "y": 500,
        "z": 0,
        "gradientWidth": 200,
        "gradientHeight": 50,
        "title": "Weight in lbs"
      }
    }
  }
}