{
  "title": "Cars Data",
  "description":  "This displays a scatterplot with the color channel mapped to Origin - a nominal data type.",
  "width": 500,
  "height": 500,
  "depth": 500,
  "data": { "url": "cereal_all.csv" },
  "mark": "point",
  "encoding": {
    "x": {
      "field": "Calories",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ 0, 200 ],
        "range": [ 0, 500 ]
      },
      "axis": {
        "face": "front",
        "orient": "bottom",
        "title": "Calories",
        "grid": false,
        "ticks": true,
        "tickCount": 5,
        "values": [ 0, 50, 100, 150, 200],
        "labels": true
      }
    },
    "y": {
      "field": "Protein (g)",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ 0, 10 ],
        "range": [ 0, 500 ]
      },
      "axis": {
        "face": "front",
        "orient": "left",
        "title": "Protein (g)",
        "grid": false,
        "ticks": true,
        "tickCount": 6,
        "values": [ 0, 2, 4, 6, 8, 10 ],
        "labels": true
      }
    },
    "color": {
      "field": "Manufacturer",
      "type": "nominal",
      "scale": {
        "type": "ordinal",
        "domain": [ "Nabisco", "Quaker Oats", "Kelloggs", "Ralston Purina", 
                    "General Mills", "Post", "American Home Food Products" ],
        "range": "category",
        "scheme": "tableau10"
      },
      "legend": {
        "type": "symbol",
        "face": "front",
        "orient": "right",
        "x": 500,
        "y": 500,
        "z": 0,
        "title": "Manufacturer"
      }
    },
    "tooltip": {
      "field": "Cereal Name",
      "type": "nominal",
      "scale": {
        "type": "custom"
      }
    },
    "size": {
      "value": 15
    }
  }
}