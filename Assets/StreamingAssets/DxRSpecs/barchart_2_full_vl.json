{
  "title": "Bar chart of keywords count in a book shelf",
  "description": "This displays a bar chart using standard bar mark using rangeStep to specify width.",
  "height": 500,
  "data": {
    "values": [
      {"keyword": "A", "count": 28},
      {"keyword": "B", "count": 55},
      {"keyword": "C", "count": 43},
      {"keyword": "D", "count": 91},
      {"keyword": "E", "count": 81},
      {"keyword": "F", "count": 53},
      {"keyword": "G", "count": 19},
      {"keyword": "H", "count": 87},
      {"keyword": "I", "count": 52}
    ]
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "keyword",
      "type": "nominal",
      "scale": {
        "type": "band",
        "domain": [ "A", "B", "C", "D", 
                    "E", "F", "G", "H", "I"
        ],
        "paddingInner": 0.1,
        "paddingOuter": 0.1,
        "rangeStep": 40
      },
      "axis": {
        "orient": "bottom",
        "title": "Keywords",
        "grid": false,
        "ticks": true
      }
    },
    "y": {
      "field": "count",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [ 0, 100 ],
        "range": [ 500, 0 ]
      },
      "axis": {
        "orient": "left",
        "title": "Count",
        "grid": true,
        "ticks": true,
        "tickCount": 6
      }
    }
  }
}

